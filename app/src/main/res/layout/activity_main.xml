<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gris">

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25sp"
        app:cardElevation="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Coordonnées :"
                android:textColor="@color/orange"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                >
            </TextView>
            <TextView
                   android:id="@+id/viewIda"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginTop="86dp"
                   android:text="Afficher IMEI"
                   android:layout_marginRight="30dp"
                   android:layout_marginLeft="30dp"
                   android:background="@color/gris">
            </TextView>

             <TextView
                   android:id="@+id/viewId"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginTop="140dp"
                   android:layout_weight="1"
                   android:text="Afficher Adresse IP"
                   android:layout_marginRight="30dp"
                   android:layout_marginLeft="30dp"
                   android:background="@color/gris">

             </TextView>

             <TextView
                    android:id="@+id/longId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="195dp"
                    android:text="Longitude"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/gris">

             </TextView>

              <TextView
                        android:id="@+id/latId"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="250dp"
                        android:text="Latitude"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/gris">

              </TextView>

<Button
    android:id="@+id/phoneInf"
    android:layout_width="104dp"
    android:layout_height="50dp"
    android:layout_marginTop="302dp"
    android:layout_marginLeft="30dp"
    android:text="Position"
    android:textSize="8dp"
                  />
            <Button
                android:id="@+id/phoneAjout"
                android:layout_width="104dp"
                android:layout_height="50dp"
                android:layout_marginTop="302dp"
                android:layout_marginLeft="144dp"
                android:textSize="8dp"
                android:text="Inserer"
                />

<Button
    android:id="@+id/phoneLoc"
    android:layout_width="104dp"
    android:layout_height="50dp"
    android:layout_marginLeft="256dp"
    android:layout_marginTop="302dp"
    android:textSize="8dp"
    android:text="Localisation"
    />
            <TextView
                android:id="@+id/copyright"
                android:text="Copyright©SenPortable 2023 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="362dp">

            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>